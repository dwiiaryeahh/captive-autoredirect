  <!-- Modal dialog -->
  <div class="h-[75vh] bg-twitter-black rounded-2xl w-[40vw] max-w-[80%] relative overflow-hidden shadow-lg">
    <div class="w-[74%] ml-[13%]">

      <!-- Modal header -->
      <div class="p-4 text-center relative">
        <div class="inline-block w-8 h-8">
          <svg viewBox="0 0 24 24" aria-hidden="true" fill="white">
            <g>
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
